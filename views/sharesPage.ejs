<%- include("./partials/header") %>

<div class="container mt-5">

    <div class="row">
        <div class="col-8">
            <h1>Explore great things and stuffs here!!</h1>
        </div>
        <div class="col-4 text-center">
            <div class="mb-4">Share your experiences, insights & ideas!</div>
            <a href="/addShares" class="btn btn-success">Create New Shares!</a>
        </div>
    </div>
    <div class="row mt-5">
        
        <div class="col-11">
            <form action="/shares" method="get">
                <div class="form-group">
                    <div class="row">
                    <div class="col-10">
                        <input type="text" id="search" name="search" class="form-control" placeholder="Search">
                    </div>
                    <div class="col-2">
                        <input type="submit" value="search" class="btn btn-info" style="display: inline-block;">
                    </div>
                </div>
                </div>
            </form>
        </div>
        <div class="col-1">
        </div>
        
    </div>

    
        <div class="dropdown float-left" style="margin-top: 15px;">
            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sort By
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/shares?sort=title">Alphabetical</a>
                <a class="dropdown-item" href="/shares?sort=mostRecent">Most Recent</a>
            </div>
        </div>

        <div class="container" style="margin-top: 100px;">
        <% data.forEach(share => {%>
            <div class="mt-5 p-4" style="width: 70%; height: 160px;overflow: hidden;background-color: #dddcdc;border-radius: 15px;">
            <a href="/shares/<%= share.id %>" class="plain-link">
                <div class="row">
                    <div class="col-4">
                        <h2><%= share.title %> </h2>
                        <div style="margin-bottom: 15px;"><strong>posted on: <%=share.elapsedTime()%> ago<br>
                        by: <%=share.User.username%></strong></div>
                    </div>
                    <div class="col-8">
                        <div style="overflow: hidden;"><%- share.content %></div>
                    </div>
                </div>
            </a>
            </div>
        <%}); %> 
        </div>
    


</div>
<%- include("./partials/footer") %>